{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "paths": {
      "@logger": ["src/logger"],
      "@entities": ["src/entities"],
      "@web/*": ["src/web/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },
  },
  "include": [
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/tests"
  ]
}
